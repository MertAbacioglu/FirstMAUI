<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMAUI.MainPage">

    <Grid  RowDefinitions="140,Auto,*"
           ColumnDefinitions=".80*,.20*"
           Padding="12">

        <Image Grid.ColumnSpan="2"
               Source="dotnet_bot.png"
               Background="orange">

        </Image>

        <Entry Placeholder="type anything 1"
               Grid.Row="1" 
               PlaceholderColor="White"
               BackgroundColor="Red">

        </Entry>
        
        <Button Text="Add"
                Grid.Row="1"
                Grid.Column="1">
            
        </Button>

        <CollectionView Grid.Row="2" Grid.ColumnSpan="2">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Blue</x:String>
                    <x:String>Green</x:String>
                    <x:String>Red</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Text="{Binding .}" Grid.Row="0" FontSize="Large"/>
                        <BoxView Grid.Row="1" HeightRequest="2" BackgroundColor="{Binding .}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>


